# Variabili d'ambiente per Solana Layer 2

# Endpoint RPC Solana
SOLANA_RPC_URL=https://api.devnet.solana.com

# Chiave privata del wallet (formato base58)
WALLET_PRIVATE_KEY=

# Program ID del Layer 2
LAYER2_PROGRAM_ID=

# Configurazione del sequencer
SEQUENCER_BATCH_SIZE=500
SEQUENCER_MAX_PARALLELISM=8
SEQUENCER_OPTIMIZATION_STRATEGY=balanced

# Configurazione del bridge
BRIDGE_BATCH_SIZE=100
BRIDGE_CONFIRMATION_LEVELS=2
BRIDGE_HIGH_VALUE_THRESHOLD=100000000000

# Configurazione del relayer
RELAYER_CONFIRMATION_BLOCKS=1
RELAYER_MAX_RETRIES=5
RELAYER_RETRY_INTERVAL=5000

# Endpoint Ethereum (per bridge)
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Indirizzi dei contratti
TOKEN_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Configurazione del logging
LOG_LEVEL=info
