{
  "name": "solana-layer2-solution",
  "version": "1.0.0",
  "description": "Layer-2 scaling solution for Solana with optimistic rollup, trustless bridge, transaction sequencer, and fee optimization",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start:sequencer": "node offchain/sequencer.js",
    "start:bridge": "node offchain/bridge.js",
    "start:relayer": "node relayer/wormhole-relayer.js",
    "build": "tsc && npm run build:sdk && npm run build:offchain",
    "build:sdk": "cd sdk && npm run build",
    "build:offchain": "echo \"Building offchain components...\" && mkdir -p dist && cp -r offchain/* dist/",
    "clean": "rimraf build",
    "lint": "eslint src --ext .ts,.js",
    "test": "jest && npm run test:sdk && npm run test:offchain",
    "test:sdk": "cd sdk && npm run test",
    "test:offchain": "jest --config jest.config.js",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:stress": "ts-node src/stress_test_runner.ts",
    "test:performance": "ts-node src/performance_test_runner.ts",
    "deploy:devnet": "ts-node scripts/deploy.ts --network devnet",
    "deploy:testnet": "ts-node scripts/deploy.ts --network testnet",
    "deploy:mainnet": "ts-node scripts/deploy.ts --network mainnet",
    "audit:fix": "npm audit fix --force",
    "postinstall": "npm run install:all",
    "install:all": "npm run install:offchain && npm run install:bridge && npm run install:relayer && npm run install:sdk && npm run install:evm",
    "install:offchain": "cd offchain && npm install",
    "install:bridge": "cd bridge && npm install",
    "install:relayer": "cd relayer && npm install",
    "install:sdk": "cd sdk && npm install",
    "install:evm": "cd evm-compatibility && npm install",
    "security-check": "npm audit && npm run security-check:all",
    "security-check:all": "npm run security-check:offchain && npm run security-check:bridge && npm run security-check:relayer && npm run security-check:sdk && npm run security-check:evm",
    "security-check:offchain": "cd offchain && npm audit",
    "security-check:bridge": "cd bridge && npm audit",
    "security-check:relayer": "cd relayer && npm audit",
    "security-check:sdk": "cd sdk && npm audit",
    "security-check:evm": "cd evm-compatibility && npm audit",
    "package": "bash scripts/package.sh"
  },
  "keywords": [
    "solana",
    "layer2",
    "rollup",
    "optimistic",
    "bridge",
    "sequencer",
    "gasless",
    "blockchain"
  ],
  "author": "BuyBot Solana Team",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.73.0",
    "@solana/spl-token": "^0.3.7",
    "merkletreejs": "^0.3.10",
    "crypto-js": "^4.1.1",
    "web3": "^1.10.0",
    "ethers": "^5.7.2",
    "bn.js": "^5.2.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "axios": "^1.3.4",
    "bs58": "^5.0.0",
    "mongodb": "^4.13.0",
    "redis": "^4.6.4",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.6",
    "node-fetch": "^2.6.7"
  }
}
