{
  "name": "solana-layer2-solution",
  "version": "1.0.0",
  "description": "Layer-2 scaling solution for Solana with Neon EVM integration",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:stress": "ts-node src/stress_test_runner.ts",
    "test:performance": "ts-node src/performance_test_runner.ts",
    "deploy:devnet": "ts-node scripts/deploy.ts --network devnet",
    "deploy:testnet": "ts-node scripts/deploy.ts --network testnet",
    "deploy:mainnet": "ts-node scripts/deploy.ts --network mainnet",
    "package": "bash scripts/package.sh"
  },
  "keywords": [
    "solana",
    "layer2",
    "neon",
    "evm",
    "ethereum",
    "scaling",
    "blockchain"
  ],
  "author": "BuyBot Solana Team",
  "license": "MIT",
  "dependencies": {
    "@neon-labs/neon-client": "^1.0.0",
    "@solana/web3.js": "^1.73.0",
    "@solana/spl-token": "^0.3.7",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "ethers": "^5.7.2",
    "web3": "^1.8.2",
    "axios": "^1.3.4",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
